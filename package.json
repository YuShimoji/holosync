{
  "name": "holosync",
  "version": "1.0.0",
  "private": true,
  "description": "YouTube multi-video synchronization web app",
  "scripts": {
    "lint": "eslint \"scripts/*.js\" \"scripts/**/*.js\" --no-error-on-unmatched-pattern",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:run": "node scripts/test-runner.js",
    "test:run:ui": "node scripts/test-runner.js --ui",
    "test:run:debug": "node scripts/test-runner.js --debug",
    "test:run:chromium": "node scripts/test-runner.js --project chromium",
    "test:report": "playwright show-report",
    "test:show-latest": "start test-artifacts/latest/index.html || open test-artifacts/latest/index.html",
    "dev": "http-server . -p 8080 -c-1",
    "dev:background": "http-server . -p 8080 -c-1 -s"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-promise": "^6.5.2",
    "http-server": "^14.1.1",
    "husky": "^9.1.3",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,css,html,md}": [
      "prettier --write"
    ],
    "**/*.js": [
      "eslint --fix"
    ]
  }
}
