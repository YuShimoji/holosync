{
  "name": "holosync",
  "version": "1.0.0",
  "private": true,
  "description": "YouTube multi-video synchronization web app",
  "scripts": {
    "lint": "eslint scripts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-promise": "^6.5.2",
    "husky": "^9.1.3",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,css,html,md}": [
      "prettier --write"
    ],
    "**/*.js": [
      "eslint --fix"
    ]
  }
}
