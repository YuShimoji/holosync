{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:promise/recommended",
    "prettier"
  ],
  "plugins": [
    "eslint-comments",
    "promise"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "script"
  },
  "globals": {
    "chrome": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "promise/always-return": "off",
    "promise/no-nesting": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "env": { "jest": true }
    }
  ]
}
